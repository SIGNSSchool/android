<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <View
        android:id="@+id/datecell"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:backgroundTint="#5959AD" />


    <TextView
        android:id="@+id/dateTVhours"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="10"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/datecell"
        app:layout_constraintEnd_toEndOf="@+id/datecell"
        app:layout_constraintStart_toStartOf="@+id/datecell"
        app:layout_constraintTop_toTopOf="@+id/datecell" />

</androidx.constraintlayout.widget.ConstraintLayout>