<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".Tag">

    <Button
        android:id="@+id/FertigButtonTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundresource"
        android:text="Fertig"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF" />

    <TextView
        android:id="@+id/TitleTVTag"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Titlte"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <Button
        android:id="@+id/AufgabeBearbeitenbutton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundresource"
        android:text="Aufgabe Bearbeiten"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:backgroundTint="#FFFFFF" />

    <TextView
        android:id="@+id/SubmissionDateTVTag"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitleTVTag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Abgabe am"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/DescriptionTVTag"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/AnhangöffnenTag"
        android:layout_below="@+id/SubmissionDateTVTag"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <Button
        android:id="@+id/AnhangöffnenTag"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/roundresource"
        android:text="Anhang öffnen"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF" />


</RelativeLayout>