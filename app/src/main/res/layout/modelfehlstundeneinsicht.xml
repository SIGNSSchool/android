<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameTVFehlstundenEinsicht"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Vorname, Nachname"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/DateTVFehlstundenEinsicht"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/nameTVFehlstundenEinsicht"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="TT.MM.JJJJ"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/classTVFehlstundenEinsicht"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/StatusTVFehlstundenEinsicht"
        android:layout_toLeftOf="@+id/StatusTVFehlstundenEinsicht"
        android:text="Klasse"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/ReasonTVFehlstundenEinsicht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DateTVFehlstundenEinsicht"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Grund"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/StatusTVFehlstundenEinsicht"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/status" />






</RelativeLayout>