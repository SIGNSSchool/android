<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context=".hoursEditDetail">


    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/black"
        android:backgroundTint="#5959AD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/hourTVhoursEdit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:text="dritte Stunde"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/dateTVhoursEdit"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="27. Dezember"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/hourTVhoursEdit"
        app:layout_constraintTop_toTopOf="@+id/hourTVhoursEdit" />


    <View
        android:id="@+id/view12"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/roundresource"
        android:backgroundTint="#E3E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view11" />


    <Button
        android:id="@+id/continuehoursEdit"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundresource"
        android:backgroundTint="#5959AD"
        android:text="Weiter"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view12" />


    <Button
        android:id="@+id/backButtonhoursEdit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundresource"
        android:backgroundTint="@color/white"
        android:text="Zurück"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continuehoursEdit" />


    <EditText
        android:id="@+id/roomEditTexthoursEdit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:hint="Raum"
        app:layout_constraintEnd_toEndOf="@+id/view12"
        app:layout_constraintStart_toStartOf="@+id/view12"
        app:layout_constraintTop_toTopOf="@+id/view12" />


    <EditText
        android:id="@+id/textEditTexthoursEdit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:hint="Vertretungstext"
        app:layout_constraintEnd_toEndOf="@+id/view12"
        app:layout_constraintStart_toStartOf="@+id/view12"
        app:layout_constraintTop_toBottomOf="@+id/roomEditTexthoursEdit" />


    <EditText
        android:id="@+id/teacherEditTexthoursEdit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Lehrer"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/view12"
        app:layout_constraintStart_toStartOf="@+id/view12"
        app:layout_constraintTop_toBottomOf="@+id/textEditTexthoursEdit" />


    <Switch
        android:id="@+id/checkboxhoursEditDetail"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view12"
        app:layout_constraintStart_toStartOf="@+id/view12">

    </Switch>

    <TextView
        android:id="@+id/cancelledTVhoursEdit"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="34dp"
        android:text="Stunde entfällt nicht"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/view12"
        app:layout_constraintStart_toEndOf="@+id/checkboxhoursEditDetail" />


</androidx.constraintlayout.widget.ConstraintLayout>